#include<stdio.h>
int main () {
int i,j,a[3][3],sr,sc;
printf ("enter the elements : ");
for(i=0;i<3;i++) {
    for(j=0;j<3;j++) {
        scanf("%d",&a[i][j]);
        }}
       printf("\n"); 
 for(i=0;i<3;i++) {
    for(j=0;j<3;j++) {
        printf("%d\t",a[i][j]);}
        printf("\n");} 
        printf("\n")   ;   
for(i=0;i<3;i++) {
    sr=sc=0;
    for(j=0;j<3;j++) {
         sr=sr+a[i][j];
         sc=sc+a[j][i]; }
        printf("\nsum of row elements = %d\nsum of column elements=%d",sr,sc);
        
         
        
         }
        
 }
                
